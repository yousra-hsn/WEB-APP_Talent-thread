<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Style for dropdown menu */
        .dropdown-menu {
            display: none;
            position: fixed;
            top: 48px; /* Adjust based on header height */
            left: 0;
            width: 25%; /* Matches the width of Offre 1 (w-1/4) */
            height: calc(100% - 60px); /* Take the full height minus header height */
            color: white;
            z-index: 10;
            overflow-y: auto; /* Enable scrolling if content is too tall */
        }
        .dropdown-menu.active {
            display: block;
        }
        .highlight {
            background-color: yellow;
        }
    </style>
</head>
<body class="bg-white relative">

    <!-- Header -->
    <header class="w-full p-3 bg-black shadow-md fixed top-0 left-0 right-0">
        <div class="container mx-auto flex items-center justify-between">
            <!-- Bouton de menu déroulant -->
            <button id="menu-button" class="text-white focus:outline-none">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </header>

    <!-- Dropdown menu -->
    <div id="dropdown-menu" class="dropdown-menu p-4 bg-gray-900 border-t border-white"> 
        <h2 class="text-xl font-bold mb-4">Menu</h2>

        <!-- First section of links -->
        <div class="mb-6">
            <div class="flex items-center mb-2">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h18v18H3z"></path>
                </svg>
                <a href="home" class="text-white">Dashboard</a>
            </div>
        </div>

        <!-- Second section of links -->
        <div class="mb-6">
            <div class="flex items-center mb-2">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6h18M3 12h18M3 18h18"></path>
                </svg>
                <a href="job_ads" class="text-white">Job Ads</a>
            </div>
            <div class="flex items-center mb-2">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m0 0l4-4m-4 4l4 4"></path>
                </svg>
                <a href="applications" class="text-white">My Applications</a>
            </div>
        </div>

        <!-- Third section of links -->
        <div class="mb-6">
            <div class="flex items-center mb-2">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <a href="/logout" class="text-white">Log Out</a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex items-center justify-center my-6 pt-20">
        <h1 class="text-3xl font-bold">Welcome home!</h1>
    </div>

    <div class="flex justify-center space-x-4 p-4">
      <div class="flex justify-center space-x-4 p-4">
        <div class="flex justify-center space-x-4 p-4">
          <!-- Offre 1 -->
          <div class="flex p-4 flex-col items-center w-1/3">
              <div class="mb-4">
                  <% if (fiches[0]) { %>
                      <h2 class="text-lg font-bold mb-1 text-black"><%= fiches[0].fiche_nom %></h2>
                      <h3 class="text-md font-medium text-black opacity-75"><%= fiches[0].organisation_nom %></h3>
                      <h4 class="text-md font-medium text-black opacity-75"><%= fiches[0].adresse_ville %>, <%= fiches[0].adresse_pays %></h4>
                      <h4 class="text-md font-medium text-black opacity-75"><%= fiches[0].salaire_min %> - <%= fiches[0].salaire_max %> (€)</h4>
                      <p class="text-gray-600 mt-2"><%= fiches[0].description_mission %></p>
                      <a id="view-more-button" class="bg-black text-white px-4 py-2 rounded-md mt-10 inline-block text-center" data-id="<%= fiches[2].id_offre %>">View More</a>
                    <% } else { %>
                      <h2 class="text-lg font-bold mb-1 text-gray-400">[No result]</h2>
                      <p class="text-gray-600">No available job description.</p>
                  <% } %>
              </div>
          </div>
      
          <!-- Offre 2 -->
          <div class="flex p-4 flex-col items-center w-1/3">
              <div class="mb-4">
                <% if (fiches[0]) { %>
                    <h2 class="text-lg font-bold mb-1 text-black"><%= fiches[1].fiche_nom %></h2>
                    <h3 class="text-md font-medium text-black opacity-75"><%= fiches[1].organisation_nom %></h3>
                    <h4 class="text-md font-medium text-black opacity-75"><%= fiches[1].adresse_ville %>, <%= fiches[1].adresse_pays %></h4>
                    <h4 class="text-md font-medium text-black opacity-75"><%= fiches[1].salaire_min %> - <%= fiches[1].salaire_max %> (€)</h4>
                    <p class="text-gray-600 mt-2"><%= fiches[1].description_mission %></p>
                    <a href="/candidate/job_ads/<%= fiches[1].id_offre %>" class="bg-black text-white px-4 py-2 rounded-md mt-10 inline-block text-center">View More</a>
                <% } else { %>
                    <h2 class="text-lg font-bold mb-1 text-gray-400">[No result]</h2>
                    <p class="text-gray-600">No available job description.</p>
                <% } %>
              </div>
          </div>
      
          <!-- Offre 3 -->
          <div class="flex p-4 flex-col items-center w-1/3">
              <div class="mb-4">
                    <% if (fiches[0]) { %>
                        <h2 class="text-lg font-bold mb-1 text-black"><%= fiches[2].fiche_nom %></h2>
                        <h3 class="text-md font-medium text-black opacity-75"><%= fiches[2].organisation_nom %></h3>
                        <h4 class="text-md font-medium text-black opacity-75"><%= fiches[2].adresse_ville %>, <%= fiches[2].adresse_pays %></h4>
                        <h4 class="text-md font-medium text-black opacity-75"><%= fiches[2].salaire_min %> - <%= fiches[2].salaire_max %> (€)</h4>
                        <p class="text-gray-600 mt-2"><%= fiches[2].description_mission %></p>
                        <a href="/candidate/job_ads/<%= fiches[2].id_offre %>" class="bg-black text-white px-4 py-2 rounded-md mt-10 inline-block text-center">View More</a>
                    <% } else { %>
                        <h2 class="text-lg font-bold mb-1 text-gray-400">[No result]</h2>
                        <p class="text-gray-600">No available job description.</p>
                    <% } %>
              </div>
          </div>
      </div>
      

    <!-- Recruiter Button -->
    <% if (userType === 'candidat') { %>
        <button onclick="location.href='apply_for_recruiter'" class="fixed bottom-4 right-4 bg-gray-800 text-white px-4 py-2 rounded-md shadow-md hover:bg-gray-700 focus:outline-none">
            Become recruiter
        </button>
    <% } else if (userType === 'recruteur') { %>
        <button onclick="location.href='../recruiter/home'" class="fixed bottom-4 right-4 bg-gray-800 text-white px-4 py-2 rounded-md shadow-md hover:bg-gray-700 focus:outline-none">
            Hire
        </button>
    <% } else { %>
        <button onclick="location.href='../login'" class="fixed bottom-4 right-4 bg-gray-800 text-white px-4 py-2 rounded-md shadow-md hover:bg-gray-700 focus:outline-none">
            Login to Recruit
        </button>
    <% } %>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
    <script>
        document.getElementById('menu-button').addEventListener('click', function() {
            document.getElementById('dropdown-menu').classList.toggle('active');
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const viewMoreButton = document.getElementById('view-more-button');
            if (viewMoreButton) {
                viewMoreButton.addEventListener('click', function () {
                    const id = this.getAttribute('data-id');
                    window.location.href = `/candidate/job_ads/${id}`;
                });
            }
        });
    </script>
</body>
</html>
